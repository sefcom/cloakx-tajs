<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jalangilogger" default="compile.module.jalangilogger">
  <dirname property="module.jalangilogger.basedir" file="${ant.file.module_jalangilogger}"/>
  
  <property name="module.jdk.home.jalangilogger" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jalangilogger" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jalangilogger" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jalangilogger" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="jalangilogger.output.dir" value="${module.jalangilogger.basedir}/../../build/production/jalangilogger"/>
  <property name="jalangilogger.testoutput.dir" value="${module.jalangilogger.basedir}/../../build/test/jalangilogger"/>
  
  <path id="jalangilogger.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jalangilogger.module.production.classpath">
    <path refid="${module.jdk.classpath.jalangilogger}"/>
  </path>
  
  <path id="jalangilogger.runtime.production.module.classpath">
    <pathelement location="${jalangilogger.output.dir}"/>
  </path>
  
  <path id="jalangilogger.module.classpath">
    <path refid="${module.jdk.classpath.jalangilogger}"/>
    <pathelement location="${jalangilogger.output.dir}"/>
  </path>
  
  <path id="jalangilogger.runtime.module.classpath">
    <pathelement location="${jalangilogger.testoutput.dir}"/>
    <pathelement location="${jalangilogger.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.jalangilogger">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jalangilogger">
    <patternset refid="excluded.from.module.jalangilogger"/>
  </patternset>
  
  
  <target name="compile.module.jalangilogger" depends="compile.module.jalangilogger.production,compile.module.jalangilogger.tests" description="Compile module jalangilogger"/>
  
  <target name="compile.module.jalangilogger.production" depends="register.custom.compilers" description="Compile module jalangilogger; production classes"/>
  
  <target name="compile.module.jalangilogger.tests" depends="register.custom.compilers,compile.module.jalangilogger.production" description="compile module jalangilogger; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jalangilogger" description="cleanup module">
    <delete dir="${jalangilogger.output.dir}"/>
    <delete dir="${jalangilogger.testoutput.dir}"/>
  </target>
</project>